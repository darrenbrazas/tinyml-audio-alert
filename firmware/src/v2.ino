#define EIDSP_QUANTIZE_FILTERBANK   0

// define parameters for temporal logic

//minimum threshold for the alarm 
// V2 detection parameters
#define ALARM_THRESHOLD 0.78
#define WINDOW_SIZE 8
#define REQUIRED_HITS 3
#define ALARM_HOLD_MS 3000

float alarmHistory[WINDOW_SIZE] = {0};
int historyIndex = 0;

unsigned long lastAlarmTime = 0;
bool alarmState = false;



